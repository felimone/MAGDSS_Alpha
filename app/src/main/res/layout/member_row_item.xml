<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="5dp"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/check"
        android:layout_above="@+id/member_row_item_tv_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NAME"
        android:id="@+id/member_row_item_tv_name"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PERMID"
        android:id="@+id/member_row_item_tv_permid"
        android:layout_below="@+id/member_row_item_tv_name"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DOB"
        android:id="@+id/member_row_item_tv_dob"
        android:layout_alignTop="@+id/member_row_item_tv_permid"
        android:layout_toEndOf="@+id/member_row_item_tv_permid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HEAD"
        android:id="@+id/member_row_item_tv_head"
        android:layout_below="@+id/member_row_item_tv_permid"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="HOUSEHOLD"
        android:id="@+id/member_row_item_tv_household"
        android:layout_below="@+id/member_row_item_tv_head"
        android:layout_toEndOf="@+id/imageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="visited"
        android:id="@+id/member_row_item_tv_date"
        android:layout_below="@+id/member_row_item_tv_household"
        android:layout_toEndOf="@+id/imageView" />

</RelativeLayout>